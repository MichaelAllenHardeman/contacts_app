with "auth_api.gpr";
with "aunit";

project Auth_API.Tests is

   --------------
   -- Settings --
   --------------
   for Languages   use ("Ada");
   for Source_Dirs use ("tests");
   for Object_Dir  use Auth_API'Object_Dir;
   for Exec_Dir    use Auth_API'Exec_Dir;
   for Main        use ("authorization-test_harness.adb");

   --------------
   -- Packages --
   --------------
   package Builder  renames Auth_API.Builder;
   package Compiler is
      for Default_Switches ("Ada") use Auth_API.Compiler'Default_Switches ("Ada");
   end Compiler;

   ------------
   -- Linker --
   ------------
   package Linker is
      for Default_Switches ("Ada") use ("-lgcov", "-fprofile-arcs", "-ftest-coverage");
   end Linker;

end Auth_API.Tests;
